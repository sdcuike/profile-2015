<included>
  <appender name="zookeeperAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${catalina.home}/logs/zookeeper-log.xml.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<FileNamePattern>${catalina.home}/logs/zookeeper-log.xml.log.out.%d{yyyy-MM-dd}
			</FileNamePattern>
		</rollingPolicy>
		<encoder>
			<pattern>%-16(%d{MM-dd HH:mm:ss}) %-5thread %-5level %logger -%msg%n</pattern>
		</encoder>
	</appender>
	
	<logger name="org.apache.zookeeper" level="info" additivity="false" >  
        <appender-ref ref="zookeeperAppender" />  
        <appender-ref ref="stdout" />
    </logger>
    
</included>